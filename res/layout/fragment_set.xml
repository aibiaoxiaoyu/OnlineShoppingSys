<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@drawable/public_content_bg" >

        <com.echo.onlineshoppingsys.view.DonutProgress
            android:id="@+id/dp_money_useage"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            custom:donut_extra_text=""
            custom:donut_extra_text_size="12dp"
            custom:donut_finished_color="#1493cf"
            custom:donut_finished_stroke_width="4dp"
            custom:donut_progress="1"
            custom:donut_text_color="#1493cf"
            custom:donut_text_size="18dp"
            custom:donut_unfinished_color="#E0E0E0"
            custom:donut_unfinished_stroke_width="4dp" />

        <TextView
            android:id="@+id/tv_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/dp_money_useage"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/dp_money_useage"
            android:text="消费金额:"
            android:textColor="#1493cf"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dp_money_useage"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/dp_money_useage"
            android:text="上限金额:"
            android:textColor="#ee0000"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_set_total"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:background="@drawable/public_bg_white"
        android:gravity="center_vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="#dcdcdc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:text="上限金额"
            android:textColor="@color/cor3"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_total_tip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/cor2"
            android:textSize="16dp" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_set_about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:background="@drawable/public_bg_white"
        android:gravity="center_vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="#dcdcdc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:text="关于"
            android:textColor="@color/cor3"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#dcdcdc" />
    </RelativeLayout>

</LinearLayout>